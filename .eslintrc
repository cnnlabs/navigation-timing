{
    "rules": {
        "indent":           [2, 4, {"SwitchCase": 1}],
        "linebreak-style":  [2, "unix"],
        "no-console":        0,
        "quotes":           [2, "single"],
        "semi":             [2, "always"]
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "modules": true
    },
    "plugins": [
    ]
}
